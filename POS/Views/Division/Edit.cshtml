@model POS.DataContext.DivisionEntity

@{
    ViewBag.Title = "Edit Division";
    Layout = "_Layout";
}

<div class="card-header">
    <h3>Edit Division</h3>
</div>
<div class="card-body">
    <form asp-controller="Division" asp-action="Update" method="post">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="DivisionName" class="floating-label" for="DivisionName">Division Name</label>
                    <input asp-for="DivisionName" class="form-control" id="DivisionName" required />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="DivisionDescription" class="floating-label" for="DivisionDescription">Description</label>
                    <input asp-for="DivisionDescription" class="form-control" id="DivisionDescription" required />
                </div>
            </div>
        </div>
        <a type="reset" asp-controller="Division" asp-action="GetAll" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
