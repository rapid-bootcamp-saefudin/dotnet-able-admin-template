@model IEnumerable<POS.DataContext.DivisionEntity>

@{
    ViewBag.Title = "Division List";
    Layout = "_Layout";
}

<div class="card-header">
    <h3>Division List</h3>
</div>
<div class="card-body">
    <div class="table-responsive">
        <a asp-action="Add" class="btn btn-sm btn-outline-primary mt-2 mb-2"><i class="feather icon-plus"></i>New Division</a>
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Division Name</th>
                    <th>Description</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.DivisionName</td>
                        <td>@item.DivisionDescription</td>
                        <td class="text-center">
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="feather icon-info"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="feather icon-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="feather icon-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
