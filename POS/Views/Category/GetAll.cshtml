@model IEnumerable<POS.DataContext.CategoryEntity>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Get All Category</h2>
<div class="card-body p-0">
    <div class="table-responsive">
        <a asp-action="Add" class="btn btn-sm btn-outline-success mt-2 mb-2">Add New Category</a>
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-right">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CategoryCode</td>
                        <td>CategoryName</td>
                        <td>CategoryDescription</td>
                        <td class="text-center">
                            @*<label class="badge badge-light-danger">Low</label>*@
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">View</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
